# üöÄ FANZ Unified Ecosystem - PRODUCTION CONFIGURATION TEMPLATE
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://fanz_user:your_secure_postgres_password_here@your-db-host:5432/fanz_unified
POSTGRES_DB=fanz_unified
POSTGRES_USER=fanz_user

# ============================================
# üì¶ REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@your-redis-host:6379

# ============================================
# üê∞ RABBITMQ CONFIGURATION
# ============================================
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here
RABBITMQ_URL=amqp://fanz_user:your_secure_rabbitmq_password_here@your-rabbitmq-host:5672/fanz

# ============================================
# üîê AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d
ENCRYPTION_KEY=your_secure_encryption_key_min_32_chars

# ============================================
# üåê DOMAIN CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
API_PORT=3001
FRONTEND_URL=https://your-domain.com
API_GATEWAY_URL=https://api.your-domain.com
CDN_URL=https://cdn.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# ============================================
# ü§ñ AI & EXTERNAL SERVICES
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL_ENDPOINT=https://api.openai.com/v1
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# üí≥ PAYMENT PROCESSING
# ============================================
PAYMENT_PROCESSOR_URL=https://your-payment-processor.com
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
CCBILL_CLIENT_ACCNUM=your_ccbill_account
CCBILL_FLEX_ID=your_ccbill_flex_id
PAXUM_API_KEY=your_paxum_api_key

# ============================================
# ‚õìÔ∏è BLOCKCHAIN & WEB3
# ============================================
BLOCKCHAIN_ENDPOINT=https://your-blockchain-node.com
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
POLYGON_RPC_URL=https://polygon-rpc.com
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_DO_NOT_COMMIT

# ============================================
# üìä MONITORING & LOGGING
# ============================================
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3010
LOG_LEVEL=info
ENABLE_MONITORING=true

# ============================================
# üîí SECURITY & COMPLIANCE
# ============================================
ENABLE_RATE_LIMITING=true
ENABLE_DDOS_PROTECTION=true
ENABLE_WAF=true
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
ADA_COMPLIANCE=true

# ============================================
# üìß EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# ============================================
# üéØ FEATURE FLAGS
# ============================================
ENABLE_WEB3=true
ENABLE_NFT_MARKETPLACE=true
ENABLE_AI_FEATURES=true
ENABLE_METAVERSE=true
ENABLE_ADULT_CONTENT=true
ENABLE_AGE_VERIFICATION=true

# ============================================
# üöÄ DEPLOYMENT CONFIGURATION
# ============================================
DEPLOYMENT_ENV=production
BUILD_VERSION=1.0.0
HEALTH_CHECK_INTERVAL=30000
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# ============================================
# üìà PERFORMANCE
# ============================================
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
CONNECTION_POOL_SIZE=10
CACHE_TTL=3600

# ============================================
# üåç GLOBALIZATION
# ============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh,ru,ar,hi
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD,BRL,KRW

# ============================================
# üé® UI/UX CONFIGURATION
# ============================================
THEME_MODE=dark
ENABLE_ANALYTICS=true
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
