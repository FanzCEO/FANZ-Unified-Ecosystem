{
  "name": "@fanz/chat-sphere",
  "version": "1.0.0",
  "description": "ðŸ’¬ ChatSphere - Real-time Communication Service for the FANZ ecosystem with messaging, video calls, live streaming, and adult content moderation",
  "main": "dist/ChatSphereService.js",
  "types": "dist/ChatSphereService.d.ts",
  "keywords": [
    "chat",
    "messaging",
    "real-time",
    "websocket",
    "video-calls",
    "live-streaming",
    "moderation",
    "adult-content",
    "fanz",
    "creator-economy"
  ],
  "author": "FANZ Engineering Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "cp -r src/assets dist/ || echo 'No assets to copy'",
    "build:docker": "docker build -t fanz-chat-sphere .",
    "clean": "rm -rf dist coverage .nyc_output",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "jest --config jest.integration.config.js --passWithNoTests",
    "test:e2e": "jest --config jest.e2e.config.js --passWithNoTests",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "ioredis": "^5.3.2",
    "ws": "^8.16.0",
    "uuid": "^9.0.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^4.0.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "simple-peer": "^9.11.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "zod": "^3.22.4",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "multer": "^2.0.2",
    "sharp": "^0.32.6",
    "fluent-ffmpeg": "^2.1.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.1",
    "prom-client": "^14.2.0",
    "openai": "^4.20.1",
    "sentiment": "^5.0.2",
    "compromise": "^14.10.0",
    "natural": "^6.12.0",
    "bad-words": "^3.0.4",
    "email-templates": "^11.1.1",
    "geoip-lite": "^1.4.7",
    "ua-parser-js": "^1.0.37",
    "cache-manager": "^5.4.0",
    "memory-cache": "^0.2.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@types/uuid": "^9.0.7",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "redis": "^4.0.0",
    "pg": "^8.11.0",
    "mongodb": "^6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*",
      "!src/demo/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fanz-ecosystem/chat-sphere.git"
  },
  "bugs": {
    "url": "https://github.com/fanz-ecosystem/chat-sphere/issues"
  },
  "homepage": "https://fanz.com/chat-sphere"
}
