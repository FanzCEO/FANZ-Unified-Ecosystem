# ðŸš€ FanzAuth Service Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/fanz_auth
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=fanzauth:
REDIS_TTL=86400

# Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-change-this
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=https://auth.fanz.app
JWT_AUDIENCE=https://fanz.app

# OIDC Configuration
OIDC_ISSUER=http://localhost:3001
OIDC_AUTHORIZATION_ENDPOINT=/oidc/authorize
OIDC_TOKEN_ENDPOINT=/oidc/token
OIDC_USERINFO_ENDPOINT=/oidc/userinfo
OIDC_JWKS_ENDPOINT=/oidc/jwks
OIDC_INTROSPECT_ENDPOINT=/oidc/introspect
OIDC_REVOKE_ENDPOINT=/oidc/revoke

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://fanzlab.fanz.app,https://boyfanz.fanz.app,https://girlfanz.fanz.app,https://daddyfanz.fanz.app,https://pupfanz.fanz.app,https://taboofanz.fanz.app,https://transfanz.fanz.app,https://cougarfanz.fanz.app,https://fanzcock.fanz.app

# WebAuthn Configuration (for passwordless authentication)
WEBAUTHN_RP_NAME=FANZ
WEBAUTHN_RP_ID=fanz.app
WEBAUTHN_ORIGIN=https://auth.fanz.app

# Federation Configuration (for external IdPs)
FEDERATION_ENABLED=false
SAML_ENABLED=false
OAUTH_PROVIDERS=google,discord,twitter

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3

# Email Configuration (for notifications)
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (for 2FA)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Security
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12
CSRF_SECRET=your-csrf-secret

# Platform Clusters Configuration
CLUSTER_FANZLAB_URL=https://fanzlab.fanz.app
CLUSTER_BOYFANZ_URL=https://boyfanz.fanz.app
CLUSTER_GIRLFANZ_URL=https://girlfanz.fanz.app
CLUSTER_DADDYFANZ_URL=https://daddyfanz.fanz.app
CLUSTER_PUPFANZ_URL=https://pupfanz.fanz.app
CLUSTER_TABOOFANZ_URL=https://taboofanz.fanz.app
CLUSTER_TRANSFANZ_URL=https://transfanz.fanz.app
CLUSTER_COUGARFANZ_URL=https://cougarfanz.fanz.app
CLUSTER_FANZCOCK_URL=https://fanzcock.fanz.app

# Development Only
DEBUG=false
ENABLE_SWAGGER=true
MOCK_EXTERNAL_SERVICES=false