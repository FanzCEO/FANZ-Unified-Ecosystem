{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "allowJs": false,
    "checkJs": false,
    "noEmit": false,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],

    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },

  "include": [
    "src/**/*",
    "scripts/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],

  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "types": ["node"]
    }
  }
}
