# FANZ AI Integration Service Configuration
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# Service Discovery (for production)
SERVICE_NAME=fanz-ai-integration
SERVICE_VERSION=1.0.0

# Monitoring & Observability  
METRICS_ENABLED=true
TRACING_ENABLED=true

# Feature Flags
DEEPFAKE_DETECTION_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true
CONTENT_OPTIMIZATION_ENABLED=true
PRICING_OPTIMIZATION_ENABLED=true

# External Services
FANZ_API_BASE_URL=https://api.fanz.network
WEBHOOK_SECRET=your_webhook_secret_here

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
TEMPERATURE=0.3
MAX_TOKENS=1000

# Cache TTL (seconds)
CONTENT_CACHE_TTL=3600
SENTIMENT_CACHE_TTL=1800
PRICING_CACHE_TTL=7200