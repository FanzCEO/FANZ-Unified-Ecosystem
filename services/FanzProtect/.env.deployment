# FanzProtect Legal Platform - Deployment Configuration
# Configure these values before deployment

# =============================================
# SERVER CONFIGURATION
# =============================================
NODE_ENV=production
PORT=5000
API_BASE_URL=https://protect.myfanz.network
FRONTEND_URL=https://protect.myfanz.network

# =============================================
# DATABASE CONFIGURATION (Neon Serverless PostgreSQL)
# =============================================
# REQUIRED: Get from Neon Console (https://neon.tech)
DATABASE_URL=postgresql://username:password@ep-your-project.us-east-1.aws.neon.tech/fanzprotect?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-your-project.us-east-1.aws.neon.tech/fanzprotect?sslmode=require

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# =============================================
# SECURITY CONFIGURATION
# =============================================
# GENERATE SECURE KEYS:
# JWT_SECRET: openssl rand -base64 32
# ENCRYPTION_KEY: openssl rand -hex 32
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption for sensitive legal data
ENCRYPTION_KEY=REPLACE_WITH_256_BIT_ENCRYPTION_KEY
EVIDENCE_ENCRYPTION_KEY=REPLACE_WITH_EVIDENCE_ENCRYPTION_KEY

# Rate Limiting (Production)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
LEGAL_OPERATIONS_LIMIT=20
AUTH_ATTEMPTS_LIMIT=5

# CORS Origins (Production)
CORS_ORIGINS=https://protect.myfanz.network,https://dash.myfanz.network,https://sso.myfanz.network,https://myfanz.network

# =============================================
# FANZ ECOSYSTEM INTEGRATIONS
# =============================================

# FanzSSO Authentication Service
FANZSSO_API_URL=https://sso.myfanz.network/api
FANZSSO_API_KEY=REPLACE_WITH_FANZSSO_API_KEY
FANZSSO_CLIENT_ID=fanzprotect-client
FANZSSO_CLIENT_SECRET=REPLACE_WITH_FANZSSO_CLIENT_SECRET

# FanzFinance OS Billing Integration
FANZFINANCE_API_URL=https://finance.myfanz.network/api
FANZFINANCE_API_KEY=REPLACE_WITH_FANZFINANCE_API_KEY
FANZFINANCE_WEBHOOK_SECRET=REPLACE_WITH_FINANCE_WEBHOOK_SECRET

# FanzMediaCore Evidence Storage
FANZMEDIA_API_URL=https://media.myfanz.network/api
FANZMEDIA_API_KEY=REPLACE_WITH_FANZMEDIA_API_KEY
FANZMEDIA_BUCKET_NAME=fanzprotect-evidence
FANZMEDIA_CDN_URL=https://cdn.myfanz.network

# FanzDash Admin Dashboard
FANZDASH_API_URL=https://dash.myfanz.network/api
FANZDASH_API_KEY=REPLACE_WITH_FANZDASH_API_KEY
FANZDASH_WEBHOOK_URL=https://dash.myfanz.network/webhooks/fanzprotect

# FanzSecurityCompDash Compliance
FANZSECURITY_API_URL=https://security.myfanz.network/api
FANZSECURITY_API_KEY=REPLACE_WITH_FANZSECURITY_API_KEY

# =============================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================

# Email Service (for DMCA notices)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=legal@myfanz.network
SMTP_PASS=REPLACE_WITH_SMTP_PASSWORD
EMAIL_FROM=FanzProtect Legal <legal@myfanz.network>

# =============================================
# PLATFORM-SPECIFIC CONFIGURATIONS
# =============================================

# YouTube/Google API for DMCA submissions
YOUTUBE_API_KEY=REPLACE_WITH_YOUTUBE_API_KEY
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_CLIENT_SECRET

# Meta/Facebook/Instagram API
META_APP_ID=REPLACE_WITH_META_APP_ID
META_APP_SECRET=REPLACE_WITH_META_APP_SECRET
META_ACCESS_TOKEN=REPLACE_WITH_META_ACCESS_TOKEN

# Twitter/X API
TWITTER_API_KEY=REPLACE_WITH_TWITTER_API_KEY
TWITTER_API_SECRET=REPLACE_WITH_TWITTER_API_SECRET
TWITTER_BEARER_TOKEN=REPLACE_WITH_TWITTER_BEARER_TOKEN

# TikTok API
TIKTOK_CLIENT_KEY=REPLACE_WITH_TIKTOK_CLIENT_KEY
TIKTOK_CLIENT_SECRET=REPLACE_WITH_TIKTOK_CLIENT_SECRET

# =============================================
# MONITORING & OBSERVABILITY
# =============================================

# Application Monitoring
NEW_RELIC_LICENSE_KEY=REPLACE_WITH_NEWRELIC_LICENSE_KEY
NEW_RELIC_APP_NAME=FanzProtect-Legal-Platform-Production

# Error Tracking
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
SENTRY_ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=30
LOG_MAX_SIZE=50m

# =============================================
# REDIS CONFIGURATION
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD
REDIS_DB=0
REDIS_KEY_PREFIX=fanzprotect:

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET
SESSION_DURATION=86400000
SESSION_STORE=redis

# =============================================
# LEGAL COMPLIANCE SETTINGS
# =============================================

# Data Retention Policies (Production)
DATA_RETENTION_DAYS=2555  # 7 years for legal records
LOG_RETENTION_DAYS=90
EVIDENCE_RETENTION_DAYS=3653  # 10 years

# Geographic Compliance
DEFAULT_JURISDICTION=US
GDPR_ENABLED=true
CCPA_ENABLED=true
COPPA_ENABLED=true

# Legal Entity Information
LEGAL_ENTITY_NAME=FANZ Legal Protection Services LLC
LEGAL_ENTITY_ADDRESS=Your Legal Address Here
LEGAL_CONTACT_EMAIL=legal@myfanz.network
LEGAL_CONTACT_PHONE=+1-555-LEGAL-01

# =============================================
# PRODUCTION DEPLOYMENT
# =============================================

# Docker Configuration
DOCKER_ENV=production

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Load Balancer
BEHIND_PROXY=true
TRUST_PROXY=true