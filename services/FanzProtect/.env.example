# FanzProtect Legal Platform - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# =============================================
# SERVER CONFIGURATION
# =============================================
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# =============================================
# DATABASE CONFIGURATION (Neon Serverless PostgreSQL)
# =============================================
DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/fanzprotect?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/fanzprotect?sslmode=require

# Database Pool Configuration
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# =============================================
# SECURITY CONFIGURATION
# =============================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption for sensitive legal data
ENCRYPTION_KEY=your-256-bit-encryption-key-here
EVIDENCE_ENCRYPTION_KEY=your-evidence-specific-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
LEGAL_OPERATIONS_LIMIT=20
AUTH_ATTEMPTS_LIMIT=5

# CORS Origins (comma-separated)
CORS_ORIGINS=https://protect.myfanz.network,https://dash.myfanz.network,https://sso.myfanz.network

# =============================================
# FANZ ECOSYSTEM INTEGRATIONS
# =============================================

# FanzSSO Authentication Service
FANZSSO_API_URL=https://sso.myfanz.network/api
FANZSSO_API_KEY=your-fanzsso-api-key
FANZSSO_CLIENT_ID=fanzprotect-client
FANZSSO_CLIENT_SECRET=your-fanzsso-client-secret

# FanzFinance OS Billing Integration
FANZFINANCE_API_URL=https://finance.myfanz.network/api
FANZFINANCE_API_KEY=your-fanzfinance-api-key
FANZFINANCE_WEBHOOK_SECRET=your-finance-webhook-secret

# FanzMediaCore Evidence Storage
FANZMEDIA_API_URL=https://media.myfanz.network/api
FANZMEDIA_API_KEY=your-fanzmedia-api-key
FANZMEDIA_BUCKET_NAME=fanzprotect-evidence
FANZMEDIA_CDN_URL=https://cdn.myfanz.network

# FanzDash Admin Dashboard
FANZDASH_API_URL=https://dash.myfanz.network/api
FANZDASH_API_KEY=your-fanzdash-api-key
FANZDASH_WEBHOOK_URL=https://dash.myfanz.network/webhooks/fanzprotect

# FanzSecurityCompDash Compliance
FANZSECURITY_API_URL=https://security.myfanz.network/api
FANZSECURITY_API_KEY=your-fanzsecurity-api-key

# =============================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================

# Email Service (for DMCA notices and legal communications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=legal@myfanz.network
SMTP_PASS=your-smtp-password
EMAIL_FROM=FanzProtect Legal <legal@myfanz.network>

# Document Generation Service
DOCUMENT_GENERATOR_URL=https://docs.myfanz.network/api
DOCUMENT_GENERATOR_KEY=your-document-generator-key

# Legal Database & Research APIs
LEGAL_RESEARCH_API_KEY=your-legal-research-api-key
CASE_LAW_API_KEY=your-case-law-api-key

# =============================================
# PLATFORM-SPECIFIC CONFIGURATIONS
# =============================================

# YouTube/Google API for DMCA submissions
YOUTUBE_API_KEY=your-youtube-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Meta/Facebook/Instagram API
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# TikTok API
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# OnlyFans API (if available)
ONLYFANS_API_KEY=your-onlyfans-api-key

# =============================================
# MONITORING & OBSERVABILITY
# =============================================

# Application Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=FanzProtect-Legal-Platform

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Metrics Collection
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================
# REDIS CONFIGURATION (for caching & sessions)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=fanzprotect:

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_DURATION=86400000
SESSION_STORE=redis

# =============================================
# FILE STORAGE & CDN
# =============================================

# Local file storage (development)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,mp4,mov,zip

# CDN Configuration (production)
CDN_URL=https://cdn.myfanz.network
CDN_API_KEY=your-cdn-api-key

# =============================================
# LEGAL COMPLIANCE SETTINGS
# =============================================

# Data Retention Policies
DATA_RETENTION_DAYS=2555  # 7 years for legal records
LOG_RETENTION_DAYS=90
EVIDENCE_RETENTION_DAYS=3653  # 10 years

# Geographic Compliance
DEFAULT_JURISDICTION=US
GDPR_ENABLED=true
CCPA_ENABLED=true
COPPA_ENABLED=true

# Legal Notice Templates
LEGAL_ENTITY_NAME=FANZ Legal Protection Services LLC
LEGAL_ENTITY_ADDRESS=123 Legal Ave, Suite 100, Legal City, LC 12345
LEGAL_CONTACT_EMAIL=legal@myfanz.network
LEGAL_CONTACT_PHONE=+1-555-LEGAL-01

# =============================================
# DEVELOPMENT & TESTING
# =============================================

# Development Mode Settings
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH_IN_DEV=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/fanzprotect_test
TEST_JWT_SECRET=test-jwt-secret-for-testing-only
TEST_ENCRYPTION_KEY=test-encryption-key-for-testing

# Feature Flags
FEATURE_AI_LEGAL_ASSISTANT=false
FEATURE_AUTOMATED_SETTLEMENTS=false
FEATURE_BLOCKCHAIN_EVIDENCE=false
FEATURE_MULTI_LANGUAGE_SUPPORT=false

# =============================================
# WEBHOOK CONFIGURATIONS
# =============================================

# Internal Webhooks
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=30000

# Platform Webhooks (for receiving DMCA responses)
DMCA_RESPONSE_WEBHOOK_URL=https://protect.myfanz.network/webhooks/dmca-response
LEGAL_UPDATE_WEBHOOK_URL=https://protect.myfanz.network/webhooks/legal-update

# =============================================
# BACKUP & DISASTER RECOVERY
# =============================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=fanzprotect-backups
BACKUP_S3_REGION=us-east-1

# =============================================
# PRODUCTION DEPLOYMENT
# =============================================

# Docker Configuration
DOCKER_ENV=production

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0  # 0 = auto (based on CPU cores)

# Load Balancer
BEHIND_PROXY=true
TRUST_PROXY=true