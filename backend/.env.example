# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fanz_ecosystem_dev
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-at-least-32-characters
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Payment Processing
PAYMENT_PROCESSOR_API_KEY=your-payment-processor-api-key
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret
PAYMENT_PUBLIC_KEY=your-payment-public-key

# Blockchain Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
BLOCKCHAIN_NETWORK=ethereum
PRIVATE_KEY=your-wallet-private-key
CONTRACT_DEPLOYER_ADDRESS=your-deployer-wallet-address

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET_NAME=fanz-storage-dev
CLOUDFRONT_DOMAIN=cdn.fanz.dev

# External Services
OPENAI_API_KEY=your-openai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=10

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,audio/mpeg,audio/wav

# Monitoring
SENTRY_DSN=your-sentry-dsn
METRICS_PORT=3001
LOG_LEVEL=debug

# Feature Flags
ENABLE_PLAYGROUND=true
ENABLE_WEBSOCKETS=true
ENABLE_BLOCKCHAIN=true
ENABLE_AI_FEATURES=true

# Application
APP_VERSION=1.0.0