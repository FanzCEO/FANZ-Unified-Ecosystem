{
  "name": "fanz-unified-ecosystem-backend",
  "version": "1.0.0",
  "description": "Revolutionary Creator Economy Platform - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "npm run db:migrate:down && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t fanz-api .",
    "docker:run": "docker run -p 3000:3000 fanz-api",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "logs": "docker-compose logs -f api",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "creator-economy",
    "blockchain",
    "metaverse",
    "api",
    "typescript",
    "nodejs",
    "postgresql",
    "redis",
    "websocket"
  ],
  "author": "FANZ Development Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "axios": "^1.6.2",
    "ethers": "^6.8.1",
    "web3": "^4.2.2",
    "aws-sdk": "^2.1489.0",
    "@aws-sdk/client-s3": "^3.449.0",
    "@aws-sdk/s3-request-presigner": "^3.449.0",
    "twilio": "^4.19.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "node-cron": "^3.0.3",
    "square": "^30.0.0",
    "braintree": "^3.16.0",
    "@adyen/api-library": "^16.1.0",
    "coinbase-commerce-node": "^1.0.4",
    "@sentry/node": "^7.84.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/pg": "^8.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "node-pg-migrate": "^6.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/server.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}