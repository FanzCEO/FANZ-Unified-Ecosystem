"engines": { "node": "20.x" }
"packageManager": "pnpm@9.12.3"{
  "name": "fanz-unified-ecosystem-backend",
  "version": "1.0.0",
  "description": "Revolutionary Creator Economy Platform - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "npm run db:migrate:down && npm run db:migrate && npm run db:seed",
    "vendor-access:setup": "bash scripts/setup-vendor-access.sh",
    "vendor-access:migrate": "bash scripts/setup-vendor-access.sh migrate",
    "vendor-access:seed": "ts-node scripts/seed-vendor-access.ts",
    "vendor-access:verify": "bash scripts/setup-vendor-access.sh verify",
    "vendor-access:demo": "node scripts/demo-vendor-access.js",
    "docker:build": "docker build -t fanz-api .",
    "docker:run": "docker run -p 3000:3000 fanz-api",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "logs": "docker-compose logs -f api",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "creator-economy",
    "blockchain",
    "metaverse",
    "api",
    "typescript",
    "nodejs",
    "postgresql",
    "redis",
    "websocket"
  ],
  "author": "FANZ Development Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@adyen/api-library": "^16.1.0",
    "@aws-sdk/client-s3": "^3.702.0",
    "@aws-sdk/s3-request-presigner": "^3.702.0",
    "@sentry/node": "^8.46.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "braintree": "^3.27.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "inversify": "^6.2.2",
    "ioredis": "^5.4.2",
    "joi": "^18.0.1",
    "jose": "^5.10.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.18",
    "openai": "^4.82.0",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "pino-http": "^10.5.0",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "square": "^43.0.2",
    "twilio": "^5.5.0",
    "undici": "^6.21.3",
    "uuid": "^11.0.4",
    "web3": "^4.16.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/nock": "^10.0.3",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "node-pg-migrate": "^7.9.0",
    "nodemon": "^3.1.8",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/server.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
