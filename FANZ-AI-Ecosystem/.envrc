# FANZ AI Ecosystem Environment Configuration
# Automatically loads runtime versions and environment variables

# Activate mise for runtime management
eval "$(mise activate direnv)"

# Load environment-specific configuration
dotenv_if_exists .env.local
dotenv_if_exists .env.development
dotenv_if_exists .env

# Set FANZ-specific environment variables
export FANZ_ECOSYSTEM="ai-ecosystem"
export PLATFORM_NAME="FANZ Unlimited Network"
export ADULT_CONTENT_PLATFORM="true"

# Security defaults
export TLS_MIN_VERSION="1.3"
export ENCRYPTION_STANDARD="AES-256-GCM"
export AUTH_STRATEGY="zero-trust"

# Development tools
export NODE_OPTIONS="--max-old-space-size=4096"
export PNPM_HOME="$HOME/.local/share/pnpm"
export PATH="$PNPM_HOME:$PATH"

# Adult-friendly payment processing (NO Stripe/PayPal)
export PAYMENT_PROCESSOR_PRIMARY="ccbill"
export PAYMENT_PROCESSOR_SECONDARY="segpay"
export PAYMENT_PROCESSOR_CRYPTO="coinbase-commerce"

# Compliance requirements
export COMPLIANCE_2257_ENABLED="true"
export AGE_VERIFICATION_REQUIRED="true"
export GDPR_COMPLIANCE_MODE="strict"
export WCAG_LEVEL="AA"

# Monitoring and observability
export OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
export OTEL_SERVICE_NAME="fanz-ai-ecosystem"
export OTEL_RESOURCE_ATTRIBUTES="service.name=fanz-ai-ecosystem,service.version=1.0.0"

# Development database (use Docker Compose)
export DATABASE_URL="postgresql://fanz:fanz@localhost:5432/fanz_ai_ecosystem"
export REDIS_URL="redis://localhost:6379"

# AI services configuration
export OPENAI_API_KEY_FILE=".secrets/openai_api_key"
export ANTHROPIC_API_KEY_FILE=".secrets/anthropic_api_key"

echo "üöÄ FANZ AI Ecosystem environment loaded successfully!"
echo "üì¶ Node $(node --version) | pnpm $(pnpm --version)"
echo "üîê Security: TLS $TLS_MIN_VERSION | Encryption: $ENCRYPTION_STANDARD"
echo "üí≥ Payment: Adult-friendly processors only (NO Stripe/PayPal)"