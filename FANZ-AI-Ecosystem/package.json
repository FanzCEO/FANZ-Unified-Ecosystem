{
  "name": "@fanz/ai-ecosystem",
  "version": "1.0.0",
  "description": "FANZ AI Ecosystem - Next-generation adult creator platform with AI-powered services",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.10.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "dev": "pnpm --parallel --recursive run dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "turbo test --coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo clean && rimraf node_modules/.cache",
    "audit": "pnpm audit --audit-level moderate",
    "security:scan": "./scripts/security-scan.sh",
    "compliance:check": "./scripts/compliance-check.sh",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging", 
    "deploy:prod": "./scripts/deploy.sh production",
    "health-check": "./scripts/health-check.sh",
    "monitoring:setup": "./scripts/setup-monitoring.sh",
    "docker:build": "./scripts/build.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "quality:gate": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run audit"
  },
  "keywords": [
    "fanz",
    "adult-content",
    "creator-platform", 
    "ai-services",
    "microservices",
    "kubernetes",
    "compliance",
    "accessibility",
    "security"
  ],
  "author": "FANZ Platform Team <dev@fanz.network>",
  "license": "PROPRIETARY",
  "homepage": "https://fanz.network",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshuastone/FANZ-AI-Ecosystem.git"
  },
  "bugs": {
    "url": "https://github.com/joshuastone/FANZ-AI-Ecosystem/issues"
  },
  "workspaces": [
    "apps/*",
    "services/*", 
    "packages/*",
    "infrastructure/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.10.16",
    "turbo": "^1.10.16",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "pnpm": {
    "overrides": {
      "stripe": "npm:@fanz/no-stripe@1.0.0",
      "paypal": "npm:@fanz/no-paypal@1.0.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "platform": "FANZ Unlimited Network",
    "adultContent": true,
    "paymentProcessors": {
      "allowed": ["ccbill", "segpay", "epoch", "verotel"],
      "blocked": ["stripe", "paypal", "square"]
    },
    "compliance": {
      "2257": true,
      "gdpr": true,
      "wcag": "AA"
    },
    "security": {
      "tlsVersion": "1.3",
      "encryption": "AES-256-GCM",
      "authStrategy": "zero-trust"
    }
  }
}