  "title": "refund_requested",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "const": "refund_requested"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string",
      "format": "uuid"
    },
    "reason": {
      "type": "string"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "order_id"
  ]
