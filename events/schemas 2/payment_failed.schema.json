{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fanzunlimited.com/payment_failed.schema.json",
  "title": "payment_failed",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "const": "payment_failed"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string",
      "format": "uuid"
    },
    "failure_code": {
      "type": "string"
    },
    "failure_message": {
      "type": "string"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "order_id",
    "failure_code"
  ]
}