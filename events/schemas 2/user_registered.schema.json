{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fanzunlimited.com/user_registered.schema.json",
  "title": "user_registered",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "const": "user_registered"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "role": {
          "type": "string",
          "enum": [
            "fan",
            "creator"
          ]
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "id",
        "role"
      ]
    },
    "source": {
      "type": "string",
      "const": "identity-auth"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "user",
    "source"
  ]
}