{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fanzunlimited.com/payment_settled.schema.json",
  "title": "payment_settled",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "const": "payment_settled"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "order_id": {
      "type": "string",
      "format": "uuid"
    },
    "amount_cents": {
      "type": "integer"
    },
    "currency": {
      "type": "string"
    },
    "creator_id": {
      "type": "string",
      "format": "uuid"
    },
    "fan_id": {
      "type": "string",
      "format": "uuid"
    },
    "source": {
      "type": "string",
      "const": "fanz-finance"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "order_id",
    "amount_cents",
    "currency",
    "creator_id",
    "source"
  ]
}