# ============================================================================
# FANZ UNIFIED ECOSYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string for main database
DATABASE_URL=postgresql://username:password@localhost:5432/fanzdash

# Optional: Separate databases for multi-tenant isolation
FANZ_IDENTITY_DB=postgresql://username:password@localhost:5432/fanz_identity
FANZ_MONEY_DB=postgresql://username:password@localhost:5432/fanz_money
FANZ_MEDIA_DB=postgresql://username:password@localhost:5432/fanz_media
FANZ_SOCIAL_DB=postgresql://username:password@localhost:5432/fanz_social

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

NODE_ENV=development
PORT=3000
STREAMING_PORT=8080
RTMP_PORT=1935

# Base URLs
BASE_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Session secret for cookie signing
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ============================================================================
# GOOGLE ANALYTICS 4 (GA4) - DEFAULT CONFIGURATION
# ============================================================================
# These are default values - can be overridden per platform via UI

GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your-ga4-api-secret

# ============================================================================
# GOOGLE TAG MANAGER (GTM) - DEFAULT CONFIGURATION
# ============================================================================

GTM_CONTAINER_ID=GTM-XXXXXXX

# ============================================================================
# SOCIAL MEDIA PIXELS - DEFAULT CONFIGURATION
# ============================================================================

# Facebook Pixel
FACEBOOK_PIXEL_ID=123456789012345
FACEBOOK_ACCESS_TOKEN=your-facebook-business-api-token

# TikTok Pixel
TIKTOK_PIXEL_ID=ABCDEFGHIJKLMNOP
TIKTOK_ACCESS_TOKEN=your-tiktok-events-api-token

# Twitter/X Pixel
TWITTER_PIXEL_ID=o1234
TWITTER_ACCESS_TOKEN=your-twitter-api-token

# Reddit Pixel
REDDIT_PIXEL_ID=t2_xxxxxx
REDDIT_ACCESS_TOKEN=your-reddit-ads-api-token

# Instagram (uses Facebook Business API)
INSTAGRAM_PIXEL_ID=123456789012345
INSTAGRAM_ACCESS_TOKEN=your-instagram-graph-api-token

# Patreon
PATREON_PIXEL_ID=your-patreon-campaign-id
PATREON_ACCESS_TOKEN=your-patreon-api-token

# ============================================================================
# SOCIAL OAUTH PROVIDERS - 7 PROVIDERS
# ============================================================================
# Required for social login and profile connections

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/oauth/facebook/callback

# Twitter/X OAuth 2.0
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:3000/api/oauth/twitter/callback

# TikTok OAuth
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/api/oauth/tiktok/callback

# Reddit OAuth
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_REDIRECT_URI=http://localhost:3000/api/oauth/reddit/callback

# Instagram (uses Facebook Graph API)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/oauth/instagram/callback

# Patreon OAuth
PATREON_CLIENT_ID=your-patreon-client-id
PATREON_CLIENT_SECRET=your-patreon-client-secret
PATREON_REDIRECT_URI=http://localhost:3000/api/oauth/patreon/callback

# ============================================================================
# CALENDAR INTEGRATIONS
# ============================================================================

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/google/callback

# Microsoft Outlook Calendar
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/calendar/outlook/callback

# Apple Calendar (CalDAV)
APPLE_CALENDAR_USERNAME=your-apple-id@icloud.com
APPLE_CALENDAR_APP_PASSWORD=your-app-specific-password

# ============================================================================
# CONTENT DELIVERY & STORAGE
# ============================================================================

# AWS S3 (or compatible storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fanz-media-storage

# Cloudflare (optional)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ============================================================================
# EMAIL SERVICES
# ============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@fanz.com

# ============================================================================
# AI & MACHINE LEARNING SERVICES
# ============================================================================

# OpenAI (for AI analysis features)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxx

# Content Moderation APIs
AZURE_CONTENT_MODERATOR_KEY=your-azure-key
AZURE_CONTENT_MODERATOR_ENDPOINT=https://your-region.api.cognitive.microsoft.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# DataDog (optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# LogRocket (session replay)
LOGROCKET_APP_ID=your-logrocket-app-id

# ============================================================================
# SECURITY & COMPLIANCE
# ============================================================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRY=7d

# Encryption keys for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-character-iv

# 2257 Compliance Document Storage
COMPLIANCE_STORAGE_PATH=/secure/compliance/2257-records
COMPLIANCE_OFFICER_EMAIL=compliance@fanz.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Analytics Features
ENABLE_GA4=true
ENABLE_GTM=true
ENABLE_SOCIAL_PIXELS=true

# OAuth Features
ENABLE_SOCIAL_LOGIN=true
ENABLE_SOCIAL_POSTING=true

# Advanced Features
ENABLE_WORKFLOWS=true
ENABLE_CALENDAR_SYNC=true
ENABLE_DELEGATED_ACCESS=true

# AI Features
ENABLE_AI_MODERATION=true
ENABLE_AI_ANALYSIS=true

# ============================================================================
# MULTI-TENANT CONFIGURATION
# ============================================================================

# Default tenant for single-tenant mode
DEFAULT_TENANT_ID=fanz_main

# Platform-specific overrides (JSON format)
# PLATFORM_CONFIGS='{"FanzDash":{"ga4_id":"G-XXXXX"},"GirlFanz":{"ga4_id":"G-YYYYY"}}'

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable debug mode
DEBUG=false

# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Enable hot module reloading
HMR_ENABLED=true

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Helmet Security Headers
HELMET_ENABLED=true

# ============================================================================
# MEDIA PROTECTION SYSTEM
# ============================================================================
# Complete media protection with forensic watermarking, DMCA automation,
# and screen capture protection. See .env.mediaprotection.example for full config.

# FFmpeg Configuration (Required for transcoding)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
ENABLE_GPU_ACCELERATION=false
MAX_PARALLEL_TRANSCODING_JOBS=3

# Forensic Watermarking (Required for content protection)
# Generate with: openssl rand -hex 32
FORENSIC_ENCRYPTION_KEY=your_64_character_hex_key_here

# Chunked Upload Configuration
UPLOAD_CHUNK_SIZE=5242880
PARALLEL_UPLOAD_CHUNKS=4
MAX_UPLOAD_SIZE=10737418240

# DMCA Automation Configuration
DMCA_COMPANY_NAME=Your Company Name
DMCA_CONTACT_NAME=Your Name
DMCA_CONTACT_EMAIL=dmca@yourcompany.com
DMCA_CONTACT_PHONE=+1-555-123-4567
DMCA_COMPANY_ADDRESS=123 Main St, City, State, ZIP
ENABLE_AUTOMATED_DMCA_SCANNING=true
DMCA_SCAN_INTERVAL_HOURS=24

# Platform API Keys for automated scanning (optional)
YOUTUBE_API_KEY=your_youtube_api_key
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Screen Capture Protection Thresholds
SCREEN_CAPTURE_WARNING_THRESHOLD=3
SCREEN_CAPTURE_SUSPENSION_THRESHOLD=5
ACCOUNT_SUSPENSION_DURATION_DAYS=7

# Mobile Device Monitoring (optional)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# CDN Configuration for Media Delivery
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id
CDN_BASE_URL=https://cdn.yourfanzplatform.com

# Quality Presets (comma-separated list)
DEFAULT_QUALITY_PRESETS=1080p,720p,480p,360p,240p

# Enabled Platforms for Distribution
ENABLED_PLATFORMS=FanzDash,girlfanz,pupfanz,transfanz,fanztube,fanzclips,fanzcams,fanzflicks,fanzmemes,cougarfanz,daddyfanz,fanzvr,fanzevent,fanzmessage,fanzforge,fanzmoneydash
