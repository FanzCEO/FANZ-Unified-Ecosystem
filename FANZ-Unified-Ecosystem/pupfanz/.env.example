# PupFanz Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pupfanz"

# Replit Authentication  
REPL_ID="your-replit-client-id"
REPLIT_DOMAINS="pupfanz.com,localhost:5000"
ISSUER_URL="https://replit.com/oidc"
SESSION_SECRET="your-session-secret-key-at-least-64-characters-long-for-security"

# Local JWT Authentication (optional)
JWT_SECRET="your-jwt-secret-key-64-characters-minimum-for-local-auth-system"

# Google Cloud Storage
GCS_BUCKET="your-gcs-bucket-name"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"
# Or use individual GCS environment variables:
# GCS_PROJECT_ID="your-project-id"
# GCS_CLIENT_EMAIL="service-account@project.iam.gserviceaccount.com"
# GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# CORS & Origins
ALLOWED_ORIGINS="https://pupfanz.com,http://localhost:5000,http://localhost:5173"

# CDN (optional)
CDN_BASE_URL="https://cdn.pupfanz.com"

# OpenTelemetry (optional)
OTEL_SERVICE_NAME="pupfanz-api"
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"

# Application
NODE_ENV="development"
PORT="5000"

# Security (production)
# SECURE_COOKIES="true"
# HTTPS_ONLY="true"