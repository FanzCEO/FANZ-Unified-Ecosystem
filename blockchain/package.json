{
  "name": "@fanz/blockchain",
  "version": "1.0.0",
  "description": "FANZ NFT Marketplace Smart Contracts and Blockchain Infrastructure",
  "main": "index.js",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:mainnet": "hardhat verify --network mainnet",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "analyze": "slither .",
    "mythril": "mythril analyze contracts/FanzNFTMarketplace.sol",
    "setup:dev": "npm run compile && npm run deploy:local",
    "setup:testnet": "npm run compile && npm run deploy:sepolia",
    "setup:mainnet": "npm run compile && npm run deploy:mainnet && npm run verify:mainnet",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:scan": "echo \"Running security scan...\" && npm run security:audit"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.13",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "chai": "^4.5.0",
    "dotenv": "^16.4.7",
    "hardhat": "^2.24.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.8.2",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.15",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "nft",
    "marketplace",
    "hardhat",
    "creator-economy",
    "adult-content",
    "royalties",
    "web3"
  ],
  "author": "FANZ Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FanzCEO/FANZ-Unified-Ecosystem.git",
    "directory": "blockchain"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
