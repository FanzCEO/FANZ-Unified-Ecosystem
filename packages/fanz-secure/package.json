{
  "name": "@fanz/secure",
  "version": "1.0.0",
  "description": "Enterprise Security Middleware Package for FANZ Unified Ecosystem",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "npm run test -- --testNamePattern='Security'",
    "test:unit": "jest --testPathPattern='unit'",
    "test:integration": "jest --testPathPattern='integration'",
    "test:fuzz": "jest --testNamePattern='Fuzz'",
    "test:dast": "node tests/dast/run-dast.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "security:scan": "npm run test:security && npm run test:dast",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "security",
    "middleware",
    "express",
    "authentication",
    "authorization",
    "csrf",
    "validation",
    "sanitization",
    "rate-limiting",
    "webhook",
    "headers",
    "owasp",
    "fanz",
    "enterprise"
  ],
  "author": "FANZ Development Team",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fanz-ecosystem/fanz-unified-ecosystem.git",
    "directory": "packages/fanz-secure"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "redis": "^4.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "ip": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "rate-limiter-flexible": "^3.0.4",
    "safe-regex": "^2.1.1",
    "sanitize-filename": "^1.6.3",
    "sanitize-html": "^2.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/sanitize-html": "^2.9.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "axios": "^1.6.0",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "express": "^4.18.2",
    "ioredis-mock": "^4.7.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.fanz.internal"
  }
}
