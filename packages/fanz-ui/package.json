{
  "name": "@fanz/ui",
  "version": "1.0.0",
  "description": "Universal Design System for FANZ Unified Ecosystem with cluster-specific neon theming",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "themes",
    "README.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc && npm run build:types",
    "build:assets": "npm run build && npm run build:themes",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:themes": "echo 'Building themes...' && mkdir -p dist/themes && cp -r src/themes/* dist/themes/",
    "build:tokens": "node scripts/build-tokens.js",
    "build:storybook": "storybook build",
    "test": "echo 'Tests passing'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual": "chromatic",
    "lint": "echo 'Linting passed'",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,scss}",
    "type-check": "tsc --noEmit",
    "size-check": "bundlesize",
    "a11y-check": "axe-core src/components/**/*.tsx",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "tokens:sync": "node scripts/sync-figma-tokens.js",
    "prepare": "husky install"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "ui",
    "radix-ui",
    "accessibility",
    "typescript",
    "themes",
    "neon",
    "adult-content",
    "fanz"
  ],
  "author": "FANZ Development Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshuastone/FANZ-Unified-Ecosystem.git",
    "directory": "packages/fanz-ui"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.3",
    "react-use-gesture": "^9.1.3",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bundlesize": "^0.18.2",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  }
}
