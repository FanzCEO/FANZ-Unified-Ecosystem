# ðŸš€ FANZ Unified Ecosystem - Development Database Configuration

# Core Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/fanz_unified_ecosystem_dev
DB_NAME=fanz_unified_ecosystem_dev
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Performance Settings
DB_LOG_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000
DB_STATEMENT_TIMEOUT=30000

# SSL Configuration (disabled for development)
DB_SSL_MODE=disable

# Migration Settings
MIGRATIONS_DIR=./migrations
AUTO_MIGRATE=true

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# Development Features
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
SEED_SAMPLE_DATA=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=fanz:dev:

# Search Configuration (if using ElasticSearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=fanz_dev_

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3001