# TabooFanz Environment Configuration
# Copy this file to .env.local and fill in the values

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/taboofanz?schema=public"
REDIS_URL="redis://localhost:6379"

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session
SESSION_SECRET=

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_CLIENT_ID=

# ===========================================
# STORAGE & CDN
# ===========================================
# AWS S3 / Compatible (e.g., Cloudflare R2, Backblaze B2)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=taboofanz-media
AWS_S3_ENDPOINT=  # Leave empty for AWS, set for S3-compatible services

# CDN
CDN_URL=

# ===========================================
# EMAIL
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@taboofanz.com

# Email Provider (alternative to SMTP)
SENDGRID_API_KEY=
POSTMARK_API_KEY=

# ===========================================
# LIVE STREAMING
# ===========================================
# Mux (recommended) or Cloudflare Stream
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=
MUX_WEBHOOK_SECRET=

# Alternative: Cloudflare Stream
CF_STREAM_API_TOKEN=
CF_ACCOUNT_ID=

# ===========================================
# AI / ML SERVICES
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Content Moderation
AZURE_CONTENT_SAFETY_ENDPOINT=
AZURE_CONTENT_SAFETY_KEY=

# ===========================================
# COMPLIANCE & VERIFICATION
# ===========================================
# Age/ID Verification Provider
JUMIO_API_TOKEN=
JUMIO_API_SECRET=
# or
VERIFF_API_KEY=
VERIFF_API_SECRET=

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_AI_SUGGESTIONS=true
FEATURE_LIVE_STREAMING=true
FEATURE_MASKED_MODE=true
FEATURE_ARCHETYPE_SYSTEM=true
