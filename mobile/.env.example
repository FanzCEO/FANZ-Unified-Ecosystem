# FANZ Mobile App Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================
# API Configuration
# =================================
API_BASE_URL=https://api.fanz.app
WEBSOCKET_URL=wss://ws.fanz.app
GRAPHQL_ENDPOINT=https://api.fanz.app/graphql

# Development URLs (uncomment for local development)
# API_BASE_URL=http://localhost:3000
# WEBSOCKET_URL=ws://localhost:3001
# GRAPHQL_ENDPOINT=http://localhost:3000/graphql

# =================================
# App Configuration
# =================================
APP_ENV=development
APP_VERSION=1.0.0
BUILD_NUMBER=1
DEBUG_MODE=true
ENABLE_FLIPPER=true

# =================================
# Authentication & Security
# =================================
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-32-chars-long
BIOMETRIC_AUTH_ENABLED=true
OAUTH_CLIENT_ID=your-oauth-client-id

# =================================
# Firebase Configuration
# =================================
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=fanz-mobile.firebaseapp.com
FIREBASE_PROJECT_ID=fanz-mobile
FIREBASE_STORAGE_BUCKET=fanz-mobile.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:ios:abc123def456
FIREBASE_MEASUREMENT_ID=G-ABC123DEF4

# =================================
# Push Notifications
# =================================
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# =================================
# Payment Processing (Adult-Friendly)
# =================================
# CCBill Configuration
CCBILL_CLIENT_ACCNUM=your-ccbill-account-number
CCBILL_FLEX_ID=your-ccbill-flex-form-id
CCBILL_SALT=your-ccbill-security-salt
CCBILL_SANDBOX=true

# Paxum Configuration
PAXUM_API_KEY=your-paxum-api-key
PAXUM_API_SECRET=your-paxum-api-secret
PAXUM_SANDBOX=true

# Segpay Configuration
SEGPAY_PACKAGE_ID=your-segpay-package-id
SEGPAY_API_KEY=your-segpay-api-key
SEGPAY_SANDBOX=true

# =================================
# Media & Storage
# =================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=fanz-mobile-media
S3_BUCKET_URL=https://fanz-mobile-media.s3.amazonaws.com

CLOUDFRONT_URL=https://d123456789.cloudfront.net
CDN_URL=https://cdn.fanz.app

# =================================
# Live Streaming
# =================================
STREAMING_SERVER_URL=rtmp://stream.fanz.app/live
STREAMING_API_KEY=your-streaming-api-key
WEBRTC_TURN_SERVER=turn:turn.fanz.app:3478
WEBRTC_TURN_USERNAME=your-turn-username
WEBRTC_TURN_PASSWORD=your-turn-password

# =================================
# AI & Machine Learning
# =================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_CONTENT_MODERATION_ENDPOINT=https://api.fanz.app/ai/moderation
AI_RECOMMENDATION_ENDPOINT=https://api.fanz.app/ai/recommendations

# =================================
# Web3 & Blockchain
# =================================
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-infura-project-id
WEB3_NETWORK=mainnet
WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
SMART_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# NFT Marketplace
NFT_MARKETPLACE_CONTRACT=0xabcdef1234567890abcdef1234567890abcdef12
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# =================================
# Analytics & Monitoring
# =================================
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
CRASHLYTICS_ENABLED=true

# Performance Monitoring
NEW_RELIC_APP_TOKEN=your-newrelic-app-token
PERFORMANCE_MONITORING=true

# =================================
# Social Media Integration
# =================================
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
INSTAGRAM_CLIENT_ID=your-instagram-client-id
TIKTOK_CLIENT_KEY=your-tiktok-client-key

# =================================
# Email & Notifications
# =================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@fanz.app
EMAIL_FROM_NAME=FANZ Team

# =================================
# Compliance & Legal
# =================================
AGE_VERIFICATION_ENABLED=true
GEOLOCATION_RESTRICTIONS=true
CONTENT_RATING_SYSTEM=adult
PRIVACY_POLICY_URL=https://fanz.app/privacy
TERMS_OF_SERVICE_URL=https://fanz.app/terms

# 2257 Compliance
COMPLIANCE_RECORD_KEEPER=John Doe
COMPLIANCE_ADDRESS=123 Compliance St, Legal City, LC 12345
COMPLIANCE_EMAIL=compliance@fanz.app

# =================================
# Feature Flags
# =================================
FEATURE_NFT_MARKETPLACE=true
FEATURE_LIVE_STREAMING=true
FEATURE_AI_CONTENT_MODERATION=true
FEATURE_WEB3_INTEGRATION=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_DARK_MODE=true
FEATURE_CREATOR_ANALYTICS=true
FEATURE_SUBSCRIPTION_TIERS=true

# =================================
# Platform Specific
# =================================
# GirlFanz Platform
GIRLFANZ_THEME_COLOR=#FF0080
GIRLFANZ_API_ENDPOINT=https://girlfanz.fanz.app/api

# BoyFanz Platform  
BOYFANZ_THEME_COLOR=#FF0040
BOYFANZ_API_ENDPOINT=https://boyfanz.fanz.app/api

# Other Platform Endpoints
DADDYFANZ_API_ENDPOINT=https://daddyfanz.fanz.app/api
PUPFANZ_API_ENDPOINT=https://pupfanz.fanz.app/api
TABOOFANZ_API_ENDPOINT=https://taboofanz.fanz.app/api
TRANSFANZ_API_ENDPOINT=https://transfanz.fanz.app/api
COUGARFANZ_API_ENDPOINT=https://cougarfanz.fanz.app/api
FANZCOCK_API_ENDPOINT=https://fanzcock.fanz.app/api

# =================================
# Development & Testing
# =================================
MOCK_API_ENABLED=false
TEST_USER_EMAIL=test@fanz.app
TEST_USER_PASSWORD=TestPassword123!
E2E_TESTING=false
PERFORMANCE_TESTING=false

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Caching
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/mobile-app.log