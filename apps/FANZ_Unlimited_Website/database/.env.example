# FANZ Database Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE
# ==============================================================================

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fanz_development
DB_USER=fanz_admin
DB_PASSWORD=your_secure_password_here

# Connection Pooling (PgBouncer)
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Read Replicas (Production)
DB_READ_REPLICA_1=replica1.fanz.internal:5432
DB_READ_REPLICA_2=replica2.fanz.internal:5432
DB_READ_REPLICA_3=replica3.fanz.internal:5432

# ==============================================================================
# REDIS
# ==============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Redis Sentinel (Production)
REDIS_SENTINELS=sentinel1:26379,sentinel2:26379,sentinel3:26379
REDIS_MASTER_NAME=fanz-master

# ==============================================================================
# STORAGE (S3)
# ==============================================================================

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_MEDIA=fanz-media-production
S3_BUCKET_BACKUP=fanz-db-backups

# MinIO (Local Development)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=fanz-local

# ==============================================================================
# CDN
# ==============================================================================

CDN_URL=https://cdn.fanz.com
CDN_DOMAIN=d1234567890abc.cloudfront.net

# Cloudflare
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token

# ==============================================================================
# MESSAGE QUEUE
# ==============================================================================

# Redis Queue (BullMQ)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=your_redis_password

# RabbitMQ (Alternative)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# ==============================================================================
# SECURITY & ENCRYPTION
# ==============================================================================

# Encryption Keys (Generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# API Keys
API_KEY_HASH_SECRET=your_api_key_hash_secret

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================

# DataDog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# CloudWatch
AWS_CLOUDWATCH_LOG_GROUP=/aws/fanz/production
AWS_CLOUDWATCH_LOG_STREAM=api

# ==============================================================================
# EMAIL
# ==============================================================================

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@fanz.com

# AWS SES
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@fanz.com

# Mailhog (Local Development)
SMTP_HOST=localhost
SMTP_PORT=1025

# ==============================================================================
# PAYMENT PROCESSING
# ==============================================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================================================
# COMPLIANCE
# ==============================================================================

# 2257 Record Keeping
RECORDS_CUSTODIAN_NAME="Your Name"
RECORDS_CUSTODIAN_ADDRESS="123 Main St, City, State, ZIP"
RECORDS_CUSTODIAN_EMAIL="custodian@fanz.com"

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

ENABLE_GEOLOCATION=true
ENABLE_LIVE_STREAMING=true
ENABLE_PPV_CONTENT=true
ENABLE_CRYPTO_PAYMENTS=false

# ==============================================================================
# ENVIRONMENT
# ==============================================================================

NODE_ENV=development  # development, staging, production
LOG_LEVEL=debug       # debug, info, warn, error
PORT=3000

# ==============================================================================
# RATE LIMITING
# ==============================================================================

RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100
