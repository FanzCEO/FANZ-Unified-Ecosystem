# Container Environment Variables for FANZ-Unified-Ecosystem

# Application Configuration
NODE_ENV=production
PORT=3000
SERVICE_NAME=fanz-unified-ecosystem

# Database Configuration  
DATABASE_URL=postgresql://postgres:password@db:5432/fanz-unified-ecosystem

# Monitoring and Logging
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/health

# Container Registry
REGISTRY_URL=ghcr.io/fanzceo
IMAGE_TAG=latest

# Deployment Configuration
REPLICAS=2
CPU_LIMIT=500m
MEMORY_LIMIT=512Mi
CPU_REQUEST=100m
MEMORY_REQUEST=128Mi
