{
  "name": "fanz-auth-service",
  "version": "1.0.0",
  "description": "FANZ Unified Authentication Service with comprehensive rate limiting",
  "main": "dist/auth.js",
  "scripts": {
    "start": "node dist/auth.js",
    "dev": "nodemon src/auth.ts",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "authentication",
    "jwt",
    "rate-limiting",
    "security",
    "typescript",
    "redis"
  ],
  "author": "FANZ Development Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jose": "^5.10.0",
    "pg": "^8.16.3",
    "pino": "^9.6.0",
    "pino-http": "^10.5.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.7.0",
    "undici": "^6.21.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.8",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/auth.ts"
  }
}